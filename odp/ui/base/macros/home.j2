{% macro quick_search(title, text, image_url, link_url, link_text) %}
    <div class="d-flex flex-column align-items-center p-4">
        <h5 class="mb-3">
            {{ title }}
        </h5>
        <a href="{{ link_url }}">
            <img src="{{ image_url }}" class="img-fluid">
        </a>
        <p class="mt-3 mb-4">
            {{ text }}
        </p>
        <a href="{{ link_url }}" class="btn btn-outline-primary">
            {{ link_text }}
        </a>
    </div>
{% endmacro %}
